<Window x:Class="EyesWPF.View.Windows.ChangePriority"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EyesWPF.View.Windows"
        mc:Ignorable="d"
        Title="Изменение приоритета" Height="200" Width="400" Icon="../../Resources/Eyes-save.ico">
    <Grid Background="#FFE9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите значение приоритета" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox Name="TextPriority" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="250"></TextBox>
        <Button Content="Изменить" Name="BtnChange" Click="BtnChange_Click" Grid.Row="2" HorizontalAlignment="Left"></Button>
        <Button Content="Отменить" Name="BtnCancel" Click="BtnCancel_Click" Grid.Row="2" HorizontalAlignment="Right"></Button>
    </Grid>
</Window>
